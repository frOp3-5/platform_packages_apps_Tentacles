<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/statusbar_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

<!--    <cyanogenmod.preference.CMSystemSettingSwitchPreference
            android:key="status_bar_show_weather"
            android:title="@string/status_bar_show_weather_title"
            android:summary="@string/status_bar_show_weather_summary"
            android:defaultValue="true" /> -->

        <cyanogenmod.preference.CMSystemSettingSwitchPreference
            android:key="status_bar_brightness_control"
            android:title="@string/status_bar_toggle_brightness"
            android:summary="@string/status_bar_toggle_brightness_summary"
            android:defaultValue="false" />

        <cyanogenmod.preference.CMSystemSettingSwitchPreference
            android:key="double_tap_sleep_gesture"
            android:title="@string/status_bar_double_tap_to_sleep_title"
            android:summary="@string/status_bar_double_tap_to_sleep_summary"
            android:defaultValue="true" />

         <PreferenceScreen
            android:key="status_bar_battery_style"
            android:title="@string/status_bar_battery_style_category"
            android:layout="@layout/preference_battery_style"
            android:fragment="com.teamoctos.tentacles.fragments.StatusbarBatteryStyle" />

         <Preference
            android:key="statusbar_notifications"
            android:fragment="com.teamoctos.tentacles.fragments.StatusbarNotifications"
            android:layout="@layout/preference_statusbar_notifications"
            android:title="@string/statusbar_notifications_category" />

         <Preference
            android:key="statusbarclock"
            android:fragment="com.teamoctos.tentacles.fragments.StatusbarClock"
            android:layout="@layout/preference_statusbarclock"
            android:title="@string/status_bar_clock" />

         <Preference
            android:key="traffic"
            android:fragment="com.teamoctos.tentacles.fragments.Traffic"
            android:layout="@layout/preference_traffic"
            android:title="@string/traffic_category" />

         <Preference
            android:key="quicksettings"
            android:fragment="com.teamoctos.tentacles.fragments.QuickSettings"
            android:layout="@layout/preference_systemui_tuner_qs"
            android:title="@string/quicksettings_category" />

         <PreferenceScreen
            android:key="systemui_tuner_statusbar"
            android:title="@string/statusbar_items_category"
            android:layout="@layout/preference_systemui_tuner_statusbaritems" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.TunerActivity">
                <extra android:name="tuner" android:value="status_bar" />
            </intent>
         </PreferenceScreen>
</PreferenceScreen>
