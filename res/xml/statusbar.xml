<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/statusbar_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

         <PreferenceScreen
             android:key="network_traffic_state"
             android:title="@string/network_traffic_title"
             android:fragment="com.teamoctos.tentacles.fragments.NetworkTraffic"
             android:layout="@layout/preference_traffic" />

         <Preference
            android:key="statusbar_notifications"
            android:fragment="com.teamoctos.tentacles.fragments.StatusbarNotifications"
            android:layout="@layout/preference_statusbar_notifications"
            android:title="@string/statusbar_notifications_category" />

         <Preference
            android:key="quicksettings"
            android:fragment="com.teamoctos.tentacles.fragments.QuickSettings"
            android:layout="@layout/preference_systemui_tuner_qs"
            android:title="@string/quicksettings_category" />

         <PreferenceScreen
             android:id="@+id/statusbar_settings"
             android:fragment="com.teamoctos.tentacles.fragments.StatusBarSettings"
             android:layout="@layout/preference_statusbar"
             android:title="@string/statusbar_settings_title"
             android:icon="@drawable/ic_settings_statusbar" />  
</PreferenceScreen>
