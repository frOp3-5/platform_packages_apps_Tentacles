<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/system_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

         <Preference
            android:key="expanded_desktop"
            android:fragment="com.teamoctos.tentacles.fragments.ExpandedDesktop"
            android:layout="@layout/preference_expanded_desktop"
            android:title="@string/expanded_desktop_category" />

         <PreferenceScreen
            android:key="kerneladiutor_settings"
            android:layout="@layout/preference_kerneladiutor"
            android:title="@string/kerneladiutor_title">
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.kerneladiutor.mod"
                android:targetClass="com.grarak.kerneladiutor.MainActivity" />
         </PreferenceScreen>

         <Preference
            android:key="misctweaks"
            android:fragment="com.teamoctos.tentacles.fragments.MiscTweaks"
            android:layout="@layout/preference_misctweaks"
            android:title="@string/misctweaks_category" />

         <PreferenceScreen
            android:key="systemui_tuner_nightmode"
            android:title="@string/nightmode_category"
            android:layout="@layout/preference_systemui_tuner_nightmode" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.NightModeActivity" />
         </PreferenceScreen>

         <Preference
            android:key="powermenu"
            android:fragment="com.teamoctos.tentacles.fragments.PowerMenu"
            android:layout="@layout/preference_powermenu"
            android:title="@string/powermenu_category" />

        <!-- Substratum -->
        <PreferenceScreen
                android:key="substratum_settings"
                android:layout="@layout/preference_substratum"
                android:title="@string/substratum_title">
        <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="projekt.substratum"
                android:targetClass="projekt.substratum.LaunchActivity" />
        </PreferenceScreen>

        <!-- Phh superuser -->
        <PreferenceScreen
            android:key="superuser_settings"
            android:layout="@layout/preference_superuser"
            android:title="@string/superuser_title">
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="me.phh.superuser"
                android:targetClass="com.koushikdutta.superuser.MainActivity" />
        </PreferenceScreen>

        <!-- SuperSU -->
        <PreferenceScreen
            android:key="supersu_settings"
            android:layout="@layout/preference_supersu"
            android:title="@string/supersu_title">
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="eu.chainfire.supersu"
                android:targetClass="eu.chainfire.supersu.MainActivity" />
        </PreferenceScreen>

</PreferenceScreen>
